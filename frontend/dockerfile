FROM node:20-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy entire frontend project including .env.production
COPY . .

# Build the frontend for production
RUN npm run build

# Install a lightweight static server
RUN npm install -g serve

# Expose port for serving built site
EXPOSE 5173

# Serve production build
CMD ["serve", "-s", "dist", "-l", "5173", "--host"]
